---
import constants from '../constants';
import { Static } from '../constants/routes';

type Props = {
  title?: string | undefined;
  description?: string | undefined;
};

const { title, description = constants.description } = Astro.props;
---

<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/png" href={Static.Favicon} />
  <meta name="viewport" content="width=device-width" />
  <link
    rel="preload"
    href={Static.SansFont}
    as="font"
    type="font/woff2"
    crossorigin
  />
  <meta name="generator" content={Astro.generator} />
  <title>
    {title ? `${title} | ` : ''}{constants.name} - {constants.title}
  </title>
  <meta name="description" content={description} />
</head>
