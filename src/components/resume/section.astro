---
type Props = {
  title: string;
};

const { title } = Astro.props;
---

<section>
  <div class="flex items-center gap-2 pb-2 print:pb-0">
    <div class="w-4 aspect-square">
      <slot name="icon" />
    </div>

    <h2 class="text-xl font-semibold">{title}</h2>
  </div>

  <div class="pl-6">
    <slot />
  </div>
</section>
