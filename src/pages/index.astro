---
import Button from '../components/button.astro';
import FullPageScroller from '../components/scrolling/full-page-scroller.astro';
import constants from '../constants';
import DefaultLayout from '../layouts/default-layout.astro';
---

<DefaultLayout description={constants.description} class="">
  <FullPageScroller class="">
    <section
      class="h-full flex mx-auto max-w-4xl w-full justify-center flex-col"
    >
      <div class="space-y-8">
        <div class="space-y-2">
          <span class="text-primary-yellow md:text-lg">Hej! My name is</span>

          <h1 class="text-4xl font-black font-header md:text-8xl">
            Axel Froborg
          </h1>

          <p class="opacity-70 text-sm md:text-lg max-w-lg">
            I'm a Frontend Engineer and Freelance Software Developer. Let's
            build some products that your clients love to use!
          </p>
        </div>

        <Button>Explore my projects</Button>
      </div>
    </section>
  </FullPageScroller>
</DefaultLayout>
