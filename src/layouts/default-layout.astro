---
import Navbar from '../components/layout/navbar.astro';
import MouseCursor from '../components/mouse-cursor.svelte';
import '@fontsource/outfit/800.css';
import Meta from '../components/meta.astro';
import BottomInfo from '../components/layout/bottom-info.astro';
import BottomCta from '../components/layout/bottom-cta.astro';
import '../styles/main.scss';

type Props = {
  title?: string;
  description: string;
  class?: string;
};

const { title, description, class: className = '' } = Astro.props;
---

<html lang="en" class="scroll-smooth">
  <Meta title={title} description={description} />

  <body class="bg-primary-black text-white">
    <Navbar />

    <main class:list={[className, 'pb-24']}>
      <slot />

      <BottomCta />
    </main>

    <BottomInfo />

    <MouseCursor client:idle />

    <style>
      @font-face {
        font-family: 'Hubot Sans';
        src: url('/fonts/hubot-sans.woff2') format('woff2');
        font-weight: 200 900;
        font-stretch: 75% 125%;
        font-display: swap;
      }

      @media print {
        html {
          font-size: 0.9rem;
        }
      }
    </style>
  </body>
</html>
